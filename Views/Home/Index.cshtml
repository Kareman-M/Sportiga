@section script{
    <script>
       
        $(document).ready(function () {
            $(window).on('load', function () {
            
                document.querySelectorAll("#custCarousel .carousel-inner .carousel-item")[0].classList.add("active");
                document.querySelectorAll("#custCarousel .carousel-indicators .list-inline-item")[0].classList.add("active");
       
        });

    })
    </script>
}
<section class="FirstSider">

    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div id="custCarousel" class="carousel slide" data-ride="carousel" align="center">
                    <!-- slides -->
                    <div class="carousel-inner">
                        @foreach (var item in ViewBag.lastArticles)
                        {
                            <div class="carousel-item ">
                                <img src="~/images/@item.Image" alt="Hills">
                                <div class="carousel-caption caption-custom">
                                    <a href="/Home/essay/@item.ID">
                                    <h3 >
                                        @item.Title
                                    </h3>
                                    </a>
                                </div>
                            </div>

                        }
                    </div> <!-- Left right -->
                    <ol class="carousel-indicators list-inline">
                        @{ var i = 0;
                            foreach (var item in ViewBag.lastArticles)
                            {
                                <li class="list-inline-item ">
                                    <a  id="carousel-selector-@i" class="selected" data-slide-to="@i" data-target="#custCarousel">
                                        <img src="~/images//@item.Image" class="img-fluid">
                                    </a>
                                </li>

                                i = i + 1;
                            }
                        }
                    </ol>
                </div>
            </div>
            <div class="col-md-3"></div>

        </div>
    </div>



</section>

